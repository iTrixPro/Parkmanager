<!DOCTYPE html>
<html lang="fr">

  <head>

    <meta charset="utf-8">
    <title> Login Page </title>

    <!-- import bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

  </head>

  <body>

    <%- include("../views/layouts/header.ejs", {button: 'general', active: 'settings'} ) %>
    <div class = "container">
      <div class= "row">
        <form method="post">
          <%if(status == 'admin'){%>
            <ul><li> Users : </li></ul>
          <%}%>

          <%if(status == 'public role'){%>
            <ul><li> Your Details : </li></ul>
          <%}%>
          <%for (let i = 0; i < data.length; ++i) {%>
            <div class = "row">
              <div class="form-group col">
                <%if (i == 0) {%>
                  <label for="username_input">
                    <%if (status != 'admin'){%> Username <%}%>
                    <%if (status == 'admin'){%>(Total : <%- data.length %>)<%}%>
                  </label>
                <%}%>
                <input type="text" name="username" id="username_input" class="form-control" placeholder=<%- data[i].username%> required>
              </div>
              <%if(status != 'admin'){%>
                <div class="form-group col d-flex align-items-end">
                  <button class="btn btn-primary" type="submit"> Update </button>
                  &nbsp;
                  <a class="btn btn-danger" href="/delete"> Delete </a>
                </div>
              <%}%>
            </div>
            <br/>
          <%}%>
        </form>
      </div>
    </div>
  </body>

</html>